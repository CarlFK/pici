  <video
    id="my-video"
    class="video-js"
    controls
    preload="auto"
    data-setup="{}"
  >
    <source
        src="https://{{ domain_name }}/live/pi{{pi.port}}.m3u8"
        type='application/x-mpegURL'
    />
  </video>
  <a href="https://{{ domain_name }}/live/pi{{pi.port}}_src.m3u8" > https://{{ domain_name }}/live/pi{{pi.port}}_src.m3u8" </a>

<form method="post" action="/snmp/toggle">
 Turn it off and on again.<br>
 <input type="submit" value="Reset {{pi.port}}" class=reset_button>
 <input type="hidden" name="port" value="{{pi.port}}">
</form>

<form method="post" action="/snmp/status">
 Check it:<br>
 <input type="submit" value="status {{pi.port}}" class=reset_button>
 <input type="hidden" name="port" value="{{pi.port}}">
</form>


