[Unit]
Description=wssh daemon
Requires=wssh.socket
After=network.target

[Service]
ExecStart=/usr/local/venv/wssh/bin/wssh \
              --xheaders=True \
              --fbidhttp=False \
              --certfile='/etc/letsencrypt/live/{{ domain_name }}/fullchain.pem' \
              --keyfile='/etc/letsencrypt/live/{{ domain_name }}/privkey.pem'
User=root
Restart=on-failure
Type=simple

[Install]
WantedBy=multi-user.target
