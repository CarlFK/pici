[Unit]
Description=wssh daemon
Requires=wssh.socket
After=network.target

[Service]
ExecStart=/usr/local/bin/wssh \
              --xheaders=True \
              --fbidhttp=False \
              --certfile='/etc/ssl/ansible/certs/streaming_frontend.fullchain.pem' \
              --keyfile='/etc/ssl/ansible/private/streaming_frontend.key'
User=root
Restart=on-failure
Type=simple

[Install]
WantedBy=multi-user.target
